# App view: set to 'web' for browser deployment or 'desktop' for packaged app
FLET_APP_VIEW=web

# SQLite database path (override default data/tymate.db)
TYMATE_DB_PATH=data/tymate.db

# Placeholder secret (replace in your real .env and never commit real secrets)
FLET_SECRET_KEY=change-me-for-uploads
TYMATE_SESSION_SECRET=change-me

# Database encryption (AES-256 via SQLCipher)
# Generate a strong password: python -c "import secrets; print(secrets.token_urlsafe(32))"
TYMATE_DB_PASSWORD=change-me-to-strong-random-password

# Session inactivity timeout (minutes)
TYMATE_SESSION_TIMEOUT_MINUTES=30
